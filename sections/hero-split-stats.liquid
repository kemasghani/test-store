{%- style -%}
  /* Section padding controlled by theme settings */
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Main Grid Layout */
  .hero-split-container {
    display: grid;
    gap: 4rem 2rem;
    /* Row gap (mobile), Column gap (desktop) */
    /* Default mobile layout: Stacked, image last */
    grid-template-areas: "content" "image";
  }

  /* Desktop Layout (750px+) */
  @media screen and (min-width: 990px) {
    .hero-split-container {
      /* split 55% text, 45% image space */
      grid-template-columns: 1.1fr 0.9fr;
      grid-template-areas: "content image";
      align-items: center;
      /* Vertically center content with image */
    }
  }

  /* Content Side Styling */
  .hero-split__content {
    grid-area: content;
    display: flex;
    flex-direction: column;
    justify-content: center;
    max-width: 60rem;
    /* Ensure text line lengths are readable */
  }

  .hero-split__heading {
    /* Use theme's heading font family and weight */
    font-family: var(--font-heading-family);
    font-weight: var(--font-heading-weight);
    font-size: 3.2rem;
    line-height: 1.1;
    text-transform: uppercase;
    margin: 0 0 2rem;
    color: {{ section.settings.text_color }};
  }

  @media screen and (min-width: 750px) {
    .hero-split__heading {
      font-size: calc(var(--font-heading-scale) * 4.8rem);
      /* Scalable font size based on theme settings */
    }
  }

  .hero-split__text {
    margin-bottom: 3rem;
    color: {{ section.settings.text_color }};
    opacity: 0.8;
    /* Slightly softer color for body text */
    line-height: 1.5;
  }

  /* Button Styling */
  .hero-split__button {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    border: none;
    border-radius: 3rem;
    /* Rounded corners from design */
    padding: 1.5rem 4rem;
    font-weight: bold;
    text-decoration: none;
    transition: transform 0.2s ease
    , opacity 0.2s ease;
    width: fit-content;
    /* Colors from schema settings */
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
  }

  .hero-split__button:hover {
    transform: scale(1.02);
    opacity: 0.9;
  }

  /* Stats Section Styling */
  .hero-split__stats-wrapper {
    margin-top: 4rem;
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .stat-block {
    display: flex;
    flex-direction: column;
    /* Ensure blocks don't shrink too small, allow growth */
    flex: 1 1 120px;
    position: relative;
    color: {{ section.settings.text_color }};
  }

  /* Vertical divider line for desktop */
  @media screen and (min-width: 750px) {
    .stat-block:not(:last-child)::after {
      content: '';
      position: absolute;
      right: -1rem;
      top: 10%;
      height: 80%;
      width: 1px;
      background-color: currentColor;
      opacity: 0.2;
    }
  }

  .stat-number {
    font-size: 2.4rem;
    font-weight: bold;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 1.4rem;
    opacity: 0.7;
    margin: 0;
  }

  /* Image Side Styling */
  .hero-split__image {
    grid-area: image;
    position: relative;
    width: 100%;
    height: auto;
    border-radius: var(--media-radius, 0px);
    /* Use theme border radius if available */
    overflow: hidden;
  }

  .hero-split__image img {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
    /* Optional: Add a subtle animation on load */
    animation: fadeIn 0.8s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
{%- endstyle -%}

<div class="page-width section-{{ section.id }}-padding">
  <div class="hero-split-container">

    <div class="hero-split__content">
      {%- if section.settings.heading != blank -%}
        <h2 class="hero-split__heading">
          {{ section.settings.heading | newline_to_br }}
        </h2>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <div class="hero-split__text rte">
          {{ section.settings.text }}
        </div>
      {%- endif -%}

      {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
        <a href="{{ section.settings.button_link }}" class="hero-split__button">
          {{ section.settings.button_label }}
        </a>
      {%- endif -%}

      {%- if section.blocks.size > 0 -%}
        <div class="hero-split__stats-wrapper">
          {%- for block in section.blocks -%}
            <div class="stat-block" {{ block.shopify_attributes }}>
              {%- if block.settings.number != blank -%}
                <span class="stat-number">{{ block.settings.number }}</span>
              {%- endif -%}
              {%- if block.settings.label != blank -%}
                <p class="stat-label">{{ block.settings.label }}</p>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>

    <div class="hero-split__image">
      {%- if section.settings.image != blank -%}
        {% comment %} 
                      Best Practice: Use Shopify's image_tag.
                      It automatically handles lazy loading, responsive sizes (srcset), 
                      and prevents layout shifts by calculating width/height attributes.
                      We set 'loading: eager' if it's above the fold, 'lazy' otherwise.
                  {% endcomment %}
        {{
          section.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy', sizes: '(min-width: 990px) 50vw, 100vw', widths: '375, 550, 750, 1100, 1500, 1780, 1920', alt: section.settings.image.alt | escape
        }}
      {%- else -%}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </div>

  </div>
</div>


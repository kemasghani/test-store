{{ 'section-browse-style.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign max_blocks = 4
-%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  id="BrowseStyle-{{ section.id }}"
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    section-browse-style
    spacing-style
    gap-style
  "
  style="
    --padding-block-start: max(20px, calc(var(--spacing-scale, 1) * {{ section.settings.padding-block-start }}px));
    --padding-block-end: max(20px, calc(var(--spacing-scale, 1) * {{ section.settings.padding-block-end }}px));
    --gap: max(16px, calc(var(--gap-scale, 1) * {{ section.settings.gap }}px));
  ">
  <div class="browse-style__wrapper color-{{ section.settings.container_color_scheme }}">

    {%- if section.settings.heading != blank -%}
      <div class="browse-style__header">
        <h2 class="browse-style__heading h1">{{ section.settings.heading }}</h2>
      </div>
    {%- endif -%}

    <div class="browse-style__grid">
      {%- for block in section.blocks limit: max_blocks -%}
        {%- liquid
          assign collection = block.settings.collection
          assign title = block.settings.title | default: collection.title | default: 'Style Name'
          assign image = block.settings.image | default: collection.featured_image
        -%}

        <a
          href="{{ collection.url | default: '#' }}"
          class="browse-style__card"
          {{ block.shopify_attributes }}
          aria-label="{{ title }}">
          <h3 class="browse-style__card-title">{{ title }}</h3>

          {%- if image != blank -%}
            {{
              image | image_url: width: 1000 | image_tag: loading: 'lazy', class: 'browse-style__card-image', sizes: '(min-width: 768px) 50vw, 100vw', widths: '400, 600, 800, 1000', alt: image.alt | default: title | escape
            }}
          {%- else -%}
            <div class="browse-style__placeholder">
              {{ 'collection-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {%- endif -%}
        </a>
      {%- endfor -%}
    </div>

  </div>
</div>

{% schema %}
  {
    "name": "Browse by Style (Bento)",
    "class": "ui-test-browse-style",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "BROWSE BY DRESS STYLE"
      },
      {
        "type": "header",
        "content": "t:content.section_layout"
      },
      {
        "type": "select",
        "id": "section_width",
        "label": "t:settings.width",
        "options": [
          {
            "value": "page-width",
            "label": "Page Width"
          }, {
            "value": "full-width",
            "label": "Full Width"
          }
        ],
        "default": "page-width"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Outer Background Color",
        "default": "scheme-1"
      }, {
        "type": "color_scheme",
        "id": "container_color_scheme",
        "label": "Inner Container Color",
        "default": "scheme-2"
      }, {
        "type": "range",
        "id": "gap",
        "label": "Grid Gap",
        "min": 12,
        "max": 60,
        "step": 4,
        "unit": "px",
        "default": 24
      }, {
        "type": "header",
        "content": "t:content.padding"
      }, {
        "type": "range",
        "id": "padding-block-start",
        "label": "t:settings.top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "default": 48
      }, {
        "type": "range",
        "id": "padding-block-end",
        "label": "t:settings.bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "default": 48
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name": "Style Category",
        "limit": 4,
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          }, {
            "type": "image_picker",
            "id": "image",
            "label": "Custom Image"
          }, {
            "type": "text",
            "id": "title",
            "label": "Custom Title"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Browse by Style (Bento)"
      }
    ]
  }
{% endschema %}